{{!
    @template qbank_columnsortorder/columnsortorder.mustache

    Admin question bank setting template.

    Context variables required for this template:
    * name - plugin name
    * hiddenname - class/columname

    Example context (json):
    {
        "name": "Creatorname (creator_name_column)",
        "hiddenname": "creator_name_column"
    }
}}

<div>
    {{#str}}qbanksortdescription, qbank_columnsortorder{{/str}}
</div>
<br>
<div class="list list-group" id="sortablecolumncontainer">
    {{#names}}
        <div class="item list-group-item list-group-item-action">
            {{>core/drag_handle}}
            {{name}}
            <div class="d-none">
                <span class="column">
                    {{hiddenname}}
                </span>
            </div>
        </div>
    {{/names}}
</div>
<br>
<div>
    {{{urltomanageqbanks}}}
</div>
