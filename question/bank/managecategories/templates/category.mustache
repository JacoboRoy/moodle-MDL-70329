{{!
    @template qbank_managecategories/categoryobject

    This template renders lists for each category.

    Example context (json):
    {
        "ctxlvl": "70",
        "heading": "Question categories for 'Category: Miscellaneous",
        "list": "<ul class="category_list">...</ul>"
    }
}}

<div id="categoriesrendered">
    {{#categoriesrendered}}
    <div class="box py-3 boxwidthwide boxaligncenter generalbox questioncategories contextlevel{{ctxlvl}}">
        <h3>
            {{heading}}
        </h3>
        <ul class="category_list">
            {{#items}}
                <li class="list_item">
                    <b>
                        <a title="{{#str}}editquestions, question{{/str}}" href="{{{questionbankurl}}}">
                            {{categoryname}}
                            {{{questioncount}}}
                        </a>
                    </b>
                    <div class="text_to_html">
                        {{{categorydesc}}}
                    </div>
                    <div class="float-right">
                        <div class="float-left">
                            {{{editactionmenu}}}
                        </div>
                        &nbsp &nbsp &nbsp
                        <div class="float-right">
                            <span tabindex="0" role="button" aria-haspopup="true" data-drag-type="move" title="">
                                 {{{handle}}}
                            </span>
                        </div>
                    </div>
                </li>
            {{/items}}
        </ul>
    </div>
    {{/categoriesrendered}}
</div>